<?xml version="1.0" encoding="utf-8"?><project>
    <!-- ========================= -->
    <!-- BASIC PROJECT INFORMATION -->
    <!-- ========================= -->
    <meta title="Kareshi Project" package="com.brenninho.kareshi" version="1.0.0" company="Brenninho" /><!-- Target FPS -->
<window width="1280" height="720" fps="60" background="#000000" />

<!-- ========================= -->
<!-- HAXE / OPENFL / FLIXEL   -->
<!-- ========================= -->
<haxelib name="openfl" />
<haxelib name="lime" />
<haxelib name="flixel" />
<haxelib name="flixel-addons" />
<haxelib name="flixel-ui" />

<!-- ========================= -->
<!-- SOURCE DIRECTORY          -->
<!-- ========================= -->
<source path="src" />

<!-- ========================= -->
<!-- ASSETS                    -->
<!-- ========================= -->
<assets path="assets/images" rename="images" />
<assets path="assets/sounds" rename="sounds" />
<assets path="assets/music" rename="music" />
<assets path="assets/data" rename="data" />

<!-- ========================= -->
<!-- TARGET SETTINGS           -->
<!-- ========================= -->

<!-- Desktop -->
<config:windows if="windows" />
<config:mac if="mac" />
<config:linux if="linux" />

<!-- Mobile -->
<config:android if="android" />
<config:ios if="ios" />

</project>